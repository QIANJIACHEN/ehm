<script>
    function logout() {
        if (confirm("你确定要退出吗?")) {
            $.post(
                    "${pageContext.request.contextPath }/manage/auth/logout.do",

                    function (data) {
                        if (data.code != 101) {
                            alert(data.msg);
                            return;
                        }

                        location.replace("/beizhi/manage/login.jsp");
                    },
                    "json"
            )
        }
    }

</script>

