 /**
  * 重载列表
  */
 function reloadTable(reset) {
     var table = $('#table-list').DataTable();
     if (reset == true) {
    	 window.location.reload(true)
        // table.ajax.reload(null, true);
     } else {
         table.ajax.reload();
     }
 }

 // search 
 function searchRecorddataplane() {
	 var table = $('#table-list').DataTable();
	 reloadTable(true);
 }
 
// delete
 function deleterecorddataplane(id) {
     if (confirm("你确定要删除吗？")) {
