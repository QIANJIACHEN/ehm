<%@ page contentType="text/html;charset=UTF-8" language="java" %>
<%@ taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core" %>
<html>
<head>
    <jsp:include page="../AdminLTE-2.3.0/myapp/my-common-head.jsp"/>
    <jsp:include page="../AdminLTE-2.3.0/myapp/my-common-script.jsp"/>
</head>
<body class="hold-transition" >

<!-- Content Wrapper. Contains page content -->
<div class="wrapper">

    <div class="box wrapper " style="overflow: auto;">

        <div class="box-header with-border">
            <div class="row">
                <div class="col-xs-1" style="min-width: 160px">
                    <button class="btn btn-block btn-default col-sm-1" data-toggle="modal" data-target="#role-add-modal">
                        <i class="fa fa-plus"></i>
                       	 添加角色
                    </button>
                </div>
            </div>
        </div>
        <div class="box-body">

            <div class="dataTables_wrapper form-inline dt-bootstrap">
                <table id="table-list" class="table  table-hover">
                    <thead>
                    <tr>
                        <th>角色 ID</th>
                        <th>角色名称</th>
                        <th>上级ID</th>
                        <th>0：无效；1：有效</th>
                        <th>备注</th>
                        <th>创建时间</th>
                        <th>修改时间</th>
                        <th>排序</th>
                        <th>操作</th>
                    </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<jsp:include page='roleadd.jsp'/>

<script type="text/javascript">
$("#table-list").DataTable({
    'dom': 'tr<"row"<"col-sm-5"l><"col-sm-7"p>>',
    "serverSide": true,
    "ordering": false,
    "type": "POST",
    "ajax": {
        "url": "${pageContext.request.contextPath}/manage/manage/list.do",
        "type": "POST",
        "data": function (d) {
        	// 条件查询参数
        }
    },
    "columns": [
        {"data": "id"},
        {"data": "name"},
        {"data": "pId"},
        {"data": "status"},
        {"data": "remark"},
        {"data": "ctime"},
        {"data": "utime"},
        {"data": "listorder"}
    ],
    "ordering": false,
    "searching": false,
     "columnDefs": [
        {
            "targets": 8,
            "data": function (row, type, val, meta) {
                return row;
            },
            "render": function (data, type, full, meta) {
                var table = $("#table-list").DataTable();
                var result = '<button class="btn btn-default btn-sm" onclick="deleterole(' + data.id + ')"><i class="fa fa-trash"></i></button></div>';
                return result;
            }
        }
    ],
    "info": false,
    "language": {
        "lengthMenu": "显示 _MENU_ 条记录",
        "paginate": {
            "first": "首页",
            "next": "下一页",
            "previous": "上一页",
            "last": "末页",
        },
        "zeroRecords": "",
        "infoEmpty":"没有符合条件的数据",
        "emptyTable":"没有符合条件的数据"
    }
});

 
 // add
 function addrole() {
		var id = $("#addid").val();
		var name = $("#addname").val();
		var pId = $("#addpId").val();
		var status= $("#addstatus").val();
		var remark = $("#addremark").val();
		var ctime = $("#addctime").val();
		var utime = $("#addutime").val();
		var listorder = $("#addlistorder").val();
		$.post(
		    "${pageContext.request.contextPath}/manage/manage/saveOrUpdate.do",
		    {
		        "id": id,
		        "name": name,
		        "pId": pId,
		        "status": status,
		        "remark": remark,
		        "ctime": ctime,
		        "utime": utime,
		        "listorder": listorder
		    },
		    function (response) {
		    	 $('#role-add-modal').modal('hide');
		         reloadTable(true);
		    },
		    "json"
		);
	}
 
 // delete
 function deleterole(id) {
     if (confirm("你确定要删除吗？")) {
         $.post(
             "${pageContext.request.contextPath}/manage/manage/delete.do",
             {
                 "id": id,
             },
             function (response) {
                 $('#mood-modal').modal('hide');
                 reloadTable(true);
             },
             "json"
         );
     };
 }
 
</script>
</body>
</html>
